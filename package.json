{
  "name": "smithy-vscode",
  "displayName": "Smithy",
  "description": "Smithy IDL syntax highlighting",
  "version": "0.3.0",
  "icon": "images/smithy.png",
  "publisher": "aws-smithy",
  "engines": {
    "vscode": "^1.65.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/awslabs/smithy-vscode.git"
  },
  "license": "Apache-2.0",
  "prettier": {
    "printWidth": 120
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:smithy",
    "onCommand:smithy.runSelector"
  ],
  "main": "./out/src/extension",
  "preview": true,
  "contributes": {
    "languages": [
      {
        "id": "smithy",
        "aliases": [
          "Smithy",
          "smithy"
        ],
        "extensions": [
          ".smithy"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "smithy",
        "scopeName": "source.smithy",
        "path": "./syntaxes/smithy.tmLanguage"
      }
    ],
    "snippets": [
      {
        "language": "smithy",
        "path": "./snippets.json"
      }
    ],
    "commands": [
      {
        "command": "smithy.runSelector",
        "title": "Smithy:Selector:Run"
      },
      {
        "command": "smithy.clearSelector",
        "title": "Smithy:Selector:Clear"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "smithy.runSelector",
          "when": "editorLangId == smithy"
        },
        {
          "command": "smithy.clearSelector",
          "when": "editorLangId == smithy"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "vscode-smithy configuration",
      "properties": {
        "smithyLsp.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "smithyLsp.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        },
        "smithyLsp.version": {
          "scope": "window",
          "type": "string",
          "default": "0.0.0-SNAPSHOT",
          "description": "Version of the Smithy LSP (see https://github.com/smithy/smithy-language-server)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run webpack-package",
    "webpack-package": "webpack --mode production --devtool hidden-source-map",
    "compile": "tsc -p ./",
    "install-plugin": "npm run package && code --install-extension smithy-vscode.vsix",
    "package": "vsce package -o smithy-vscode.vsix",
    "format": "prettier --write '**/*.{ts,js,json,yml}'",
    "format-check": "prettier --check '**/*.{ts,js,json,yml}'",
    "test-grammar": "npx vscode-tmgrammar-test -s 'source.smithy' -g syntaxes/smithy.tmLanguage -t 'tests/grammar/*'",
    "test-extension": "npm run compile && npm run package && node ./out/tests/runTest.js",
    "test": "npm run format-check && npm run test-grammar"
  },
  "devDependencies": {
    "@types/follow-redirects": "^1.14.1",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@types/sinon": "^10.0.11",
    "@types/vscode": "^1.65.0",
    "@vscode/test-electron": "^2.1.3",
    "glob": "^7.1.6",
    "mocha": "^9.2.2",
    "prettier": "^2.6.2",
    "sinon": "^13.0.2",
    "ts-loader": "^9.3.0",
    "typescript": "^4.6.3",
    "vsce": "^2.8.0",
    "vscode-nls-dev": "^4.0.0",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "follow-redirects": "^1.14.9",
    "vscode-languageclient": "^7.0.0",
    "vscode-nls": "^5.0.0",
    "vscode-tmgrammar-test": "^0.0.11"
  }
}
