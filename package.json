{
  "name": "smithy-vscode",
  "displayName": "Smithy",
  "description": "Smithy IDL syntax highlighting",
  "version": "0.3.0",
  "icon": "images/smithy.png",
  "publisher": "aws-smithy",
  "engines": {
    "vscode": "^1.65.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:awslabs/smithy-vscode.git"
  },
  "license": "Apache-2.0",
  "prettier": {
    "printWidth": 120
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "preview": true,
  "contributes": {
    "languages": [
      {
        "id": "smithy",
        "aliases": [
          "Smithy",
          "smithy"
        ],
        "extensions": [
          ".smithy"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "smithy",
        "scopeName": "source.smithy",
        "path": "./syntaxes/smithy.tmLanguage"
      }
    ],
    "snippets": [
      {
        "language": "smithy",
        "path": "./snippets.json"
      }
    ]
  },
  "scripts": {
    "install-plugin": "npm run package && code --install-extension smithy-vscode-test.vsix",
    "package": "vsce package -o smithy-vscode-test.vsix",
    "format": "prettier --write '**/*.{ts,js,json,yml}'",
    "format-check": "prettier --check '**/*.{ts,js,json,yml}'",
    "test-grammar": "npx vscode-tmgrammar-test -s 'source.smithy' -g syntaxes/smithy.tmLanguage -t 'tests/grammar/*'",
    "test-extension": "tsc -p ./ && node ./out/runTest.js",
    "test": "npm run format-check && npm run test-grammar && npm run test-extension"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@types/vscode": "^1.65.0",
    "@vscode/test-electron": "^2.1.3",
    "glob": "^7.1.6",
    "mocha": "^9.2.2",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3",
    "vsce": "^2.7.0",
    "vscode-nls-dev": "^4.0.0"
  },
  "dependencies": {
    "vscode-nls": "^5.0.0",
    "vscode-tmgrammar-test": "^0.0.11"
  }
}
